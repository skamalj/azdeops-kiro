{
  "mcpServers": {
    "azure-devops-core": {
      "command": "node",
      "args": [
        "extension/mcp-server/index.js",
        "--stdio"
      ],
      "env": {
        "AZURE_DEVOPS_ORG_URL": "${AZURE_DEVOPS_ORG_URL}",
        "AZURE_DEVOPS_PROJECT": "${AZURE_DEVOPS_PROJECT}",
        "AZURE_DEVOPS_PAT": "${AZURE_DEVOPS_PAT}"
      },
      "disabled": false,
      "autoApprove": [
        "create_user_story",
        "create_task",
        "get_work_items",
        "update_work_item",
        "get_work_item",
        "create_test_case",
        "create_test_plan",
        "get_projects",
        "switch_project",
        "get_scrum_metrics",
        "delete_sprint",
        "get_sprints",
        "assign_work_items_to_sprint",
        "get_sprint_work_items"
      ]
    }
  }
}